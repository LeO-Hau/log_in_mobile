<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="284dp"
        android:layout_height="50dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="63dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="63dp"

        android:text="@string/Login"
        android:id="@+id/tv1"
        android:fontFamily="@font/majalla"
        android:textSize="40sp"
        android:lineHeight="55.86sp"
        android:textAlignment="center"
        android:textColor="#000000"
        android:shadowDy="4"
        android:shadowRadius="4"
        android:shadowColor="#000000"
        tools:ignore="UnusedAttribute"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="233dp"
        android:layout_height="72dp"

        app:layout_constraintStart_toStartOf="@id/tv1"
        app:layout_constraintTop_toBottomOf="@id/tv1"
        app:layout_constraintEnd_toEndOf="@id/tv1"
        android:layout_marginTop="10dp"

        android:text="By signing in you are agreeing our Term and privacy policy"
        android:id="@+id/tv2"
        android:fontFamily="@font/majalla"
        android:textSize="25sp"
        android:lineHeight="34.91sp"
        android:textAlignment="center"
        android:textColor="#6B5E5E"
        tools:ignore="HardcodedText,UnusedAttribute"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="43dp"
        android:layout_height="35dp"

        app:layout_constraintStart_toStartOf="@id/tv2"
        app:layout_constraintTop_toBottomOf="@id/tv2"
        android:layout_marginStart="45dp"
        android:layout_marginTop="10dp"

        android:text="Login"
        android:id="@+id/tvLogin"
        android:fontFamily="@font/majalla"
        android:textSize="25sp"
        android:lineHeight="34.91sp"
        android:textAlignment="center"
        android:textColor="#036BB9"
        tools:ignore="HardcodedText,UnusedAttribute"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="63dp"
        android:layout_height="35dp"

        app:layout_constraintTop_toBottomOf="@id/tv2"
        app:layout_constraintEnd_toEndOf="@id/tv2"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="45dp"

        android:text="Register"
        android:id="@+id/tvRegister"
        android:fontFamily="@font/majalla"
        android:textSize="25sp"
        android:lineHeight="34.91sp"
        android:textAlignment="center"
        android:textColor="#A6A6A6"
        tools:ignore="HardcodedText,UnusedAttribute"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="24dp"
        android:layout_height="24dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvLogin"
        android:layout_marginStart="45dp"
        android:layout_marginTop="20dp"

        android:src="@drawable/email"
        android:id="@+id/emailH"
        />

    <androidx.appcompat.widget.AppCompatEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvLogin"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="80dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="45dp"


        android:hint="Email Address"
        android:id="@+id/email"
        android:fontFamily="@font/majalla"
        android:textSize="25sp"
        android:lineHeight="34.91sp"
        android:textColor="#A6A6A6"
        tools:ignore="HardcodedText,InvalidId,UnusedAttribute" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="24dp"
        android:layout_height="24dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/emailH"
        android:layout_marginStart="45dp"
        android:layout_marginTop="45dp"

        android:src="@drawable/password"
        android:id="@+id/passH"
        />

    <androidx.appcompat.widget.AppCompatEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/email"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="80dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="45dp"


        android:hint="Password"
        android:id="@+id/pass"
        android:fontFamily="@font/majalla"
        android:textSize="25sp"
        android:lineHeight="34.91sp"
        android:textColor="#A6A6A6"
        tools:ignore="HardcodedText,InvalidId,UnusedAttribute" />

    <androidx.appcompat.widget.AppCompatCheckBox
        android:layout_width="wrap_content"
        android:layout_height="29dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/passH"
        android:layout_marginStart="35dp"
        android:layout_marginTop="45dp"

        android:text="Remember password"
        android:id="@+id/check"
        android:fontFamily="@font/majalla"
        android:textSize="21sp"
        android:lineHeight="29.33sp"
        android:textColor="#6B5E5E"
        tools:ignore="HardcodedText,UnusedAttribute" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="33dp"
        android:layout_height="18dp"

        app:layout_constraintTop_toBottomOf="@id/emailH"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="45dp"

        android:src="@drawable/mat"
        android:id="@+id/matH"
        />
    
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="29dp"

        app:layout_constraintTop_toBottomOf="@id/passH"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="46dp"
        android:layout_marginEnd="35dp"

        android:text="Forget password"
        android:id="@+id/tvForget"
        android:fontFamily="@font/majalla"
        android:textSize="21sp"
        android:lineHeight="29.33sp"
        android:textColor="#0386D0"
        tools:ignore="HardcodedText,UnusedAttribute" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="45dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/check"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="20dp"

        android:text="@string/Login"
        android:id="@+id/btLogin"
        android:textColor="#FFFFFFFF"
        android:background="@drawable/bo_tron_button"
        android:shadowRadius="4"
        android:shadowColor="#000000"
        android:textAllCaps="false"

        />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="35dp"

        app:layout_constraintStart_toStartOf="@id/btLogin"
        app:layout_constraintTop_toBottomOf="@id/btLogin"
        app:layout_constraintEnd_toEndOf="@id/btLogin"
        android:layout_marginTop="10dp"

        android:text="@string/or_connect_with"
        android:fontFamily="@font/majalla"
        android:textSize="21sp"
        android:lineHeight="29.33sp"
        android:textColor="#6B5E5E"
        />
    
</androidx.constraintlayout.widget.ConstraintLayout>